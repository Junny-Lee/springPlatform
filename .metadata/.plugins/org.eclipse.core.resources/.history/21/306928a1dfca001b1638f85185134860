package com.junny.firstproject;

import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
@RequestMapping("/hello") // class level annotation: this will be prepended to every route
public class HomeController {
        @RequestMapping("")
        public String hi() {
                return "Hello World again!";
        }
        @RequestMapping("/class") // this is /hello/world
        public String class() {
                return "Class level annotations are cool too!";
        }
        @RequestMapping("/greeting")
        public String index(){
          return "Hello user!";
        }
        // you can be explicit about the request as well
        @RequestMapping(value="/greeting/hello", method=RequestMethod.GET)
        public String hello(){
          return "Hello world! What route did you use to access me?";
        }
        @RequestMapping("/greeting/goodbye")
        public String world(){
          return "Goodbye world!";
        }
}